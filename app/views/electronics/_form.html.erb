<%= form_for @electronic do |f| %>
<% @error_var = @electronic %> <!-- in order to use the shared error messages -->
<%= render 'shared/error_messages' %>
<!-- Display the form for person -->
<%= f.label :name %><br>
<%= f.text_field :name, class: 'form-control' %>

<%= f.label :desc, "Description" %><br>
<%= f.text_area :desc, class: 'form-control' %>

<div class="checkbox">
  <label>
    <%= f.check_box :featured %>
    <%= f.label :featured, "Featured?" %>
  </label>
</div>

<%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
