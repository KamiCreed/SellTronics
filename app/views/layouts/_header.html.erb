<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <!-- Supposedly the Company logo and directs to the home page -->
    <%= link_to 'SellTronics', root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Electronics", electronics_path %></li>
        <% if logged_in? %>
          <li><%= link_to "People", people_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_person %></li>
              <li><%= link_to "Settings", edit_person_path(current_person) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li> <!-- class dropdown -->
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
          <li><%= link_to "Sign up", signup_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
