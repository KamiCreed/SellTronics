<% provide(:title, "List People") %>
<%= render 'welcome/home' %>
<h1>People</h1>
<%= link_to 'New person', new_person_path %>

<!-- Table of all the people -->
<table>
  <tr>
    <th>Name</th>
    <th>Weight</th>
    <th>Height</th>
    <th>Colour</th>
    <th colspan="3"></th>
  </tr>

  <% @people.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><%= person.weight %></td>
      <td><%= person.height %></td>
      <td><%= person.colour %></td>
      <td><%= link_to 'Show', person_path(person) %></td>
      <td><%= link_to 'Edit', edit_person_path(person) %></td>
      <td><%= link_to 'Delete', person_path(person),
              method: :delete,
              data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>
