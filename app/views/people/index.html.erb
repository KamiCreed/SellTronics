<h1>People</h1>
<%= link_to 'New person', new_person_path %>

<!-- Table of all the people -->
<table>
  <tr>
    <th>Name</th>
    <th>Weight</th>
    <th>Height</th>
    <th>Colour</th>
  </tr>

  <% @people.each do |person| %>
    <tr>
      <td><%= person.name %></td>
      <td><%= person.weight %></td>
      <td><%= person.height %></td>
      <td><%= person.colour %></td>
    </tr>
  <% end %>
</table>
