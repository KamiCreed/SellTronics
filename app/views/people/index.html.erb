<% provide(:title, "All People") %>
<h1>All People</h1>

<ul class="people">
  <% @people.each do |person| %>
    <li>
      <%= gravatar_for person, size: 50 %>
      <%= link_to person.name, person %>
      <% if current_person.admin? && !current_person?(person) %>
        | <%= link_to "Delete", person, method: :delete, data: { confirm: "Are you sure?"} %>
      <% end %>

      <!-- Check whether to display extra data -->
      <% if !person.weight.blank? %>
        <p>Weight: <%= person.weight %></p>
      <% end %>
      <% if !person.height.blank? %>
        <p>Height: <%= person.height %></p>
      <% end %>
      <% if !person.colour.blank? %>
        <p>Colour: <%= person.colour %></p>
      <% end %>
    </li>
  <% end %>
</ul>
