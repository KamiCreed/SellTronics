<!-- Display error messages, if any -->
<% if @error_var.errors.any? %>
<div id="error_explanation">
  <div class="alert alert-danger">
    The form contains <%= pluralize(@error_var.errors.count, "error") %>
  </div>
  </h2>
  <ul>
    <% @error_var.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
